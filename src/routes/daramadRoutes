const express = require('express');
const router = express.Router();
const db = require('../config/db');

// POST new daramad record with packingType
router.post('/', async (req, res) => {
  const {
    dCustomer_id,
    date,
    parchiNo,
    rashan,
    rashan_quantity,
    beej,
    beej_quantity,
    marka,
    kamraNo,
    rackNo,
    broker,
    packingType // new column
  } = req.body;

  const query = `
    INSERT INTO daramad (
      dCustomer_id, date, parchiNo, rashan, rashan_quantity,
      beej, beej_quantity, marka, kamraNo, rackNo, broker, packingType
    ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)
  `;

  const values = [
    dCustomer_id, date, parchiNo, rashan, rashan_quantity,
    beej, beej_quantity, marka, kamraNo, rackNo, broker, packingType
  ];

  try {
    const [result] = await db.query(query, values);
    res.status(201).json({
      message: 'Daramad record inserted',
      insertId: result.insertId
    });
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});


// Get all daramad
router.get('/', async (req, res) => {
  const query = 'SELECT * FROM daramad';
  try {
    const [results] = await db.query(query);
    res.json(results);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

// Get daramad by customer ID
router.get('/:customerId', async (req, res) => {
  const { customerId } = req.params;
  const query = 'SELECT * FROM daramad WHERE dCustomer_id = ?';
  try {
    const [results] = await db.query(query, [customerId]);
    res.json(results);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

module.exports = router;